<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".index_form">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="#38649A"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/activity_fontis" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#38649A"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#38649A"
            android:contentDescription="@string/app_name"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home_icon"
            android:text="Button 1"
            tools:src="@drawable/ic_home_icon" />

        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#38649A"
            android:contentDescription="@string/bottom_sheet_behavior"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/history"
            android:text="Button 2"
            tools:src="@drawable/ic_history_icon" />

        <ImageButton
            android:id="@+id/btnCart"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#38649A"
            android:contentDescription="@string/fab_transformation_scrim_behavior"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_cart_icon"
            android:text="Button 3"
            tools:src="@drawable/ic_cart_icon" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#38649A"
            android:contentDescription="@string/hide_bottom_view_on_scroll_behavior"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile_icon"
            android:text="Button 4"
            tools:src="@drawable/ic_profile_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="177dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:layout_marginBottom="546dp"
        android:gravity="center"
        android:text="ACCOUNT"
        android:textColor="#38649A"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>