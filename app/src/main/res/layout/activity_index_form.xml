<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".index_form">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="#38649A"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/activity_fontis" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitleInside"
            android:layout_width="203dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="OUR PRODUCTS"
            android:textColor="#38649A"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.184" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±150.00"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.464" />

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Gallon Mineral Water"
            android:textColor="#6A6666"
            android:textSize="12sp"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.121"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.49" />

        <Button
            android:id="@+id/btnAdd1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/roundedbutton"
            android:text="+"
            android:textColor="#046506"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.395" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="136dp"
            android:layout_height="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.127"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.355"
            app:srcCompat="@drawable/alvarez" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#38649A"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#38649A"
            android:contentDescription="@string/app_name"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home_icon"
            android:text="Button 1"
            tools:src="@drawable/ic_home_icon" />

        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#38649A"
            android:contentDescription="@string/bottom_sheet_behavior"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/history"
            android:text="Button 2"
            tools:src="@drawable/ic_history_icon" />

        <ImageButton
            android:id="@+id/btnCart"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#38649A"
            android:contentDescription="@string/fab_transformation_scrim_behavior"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_cart_icon"
            android:text="Button 3"
            tools:src="@drawable/ic_cart_icon" />

        <ImageButton
            android:id="@+id/btnAccount"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#38649A"
            android:contentDescription="@string/hide_bottom_view_on_scroll_behavior"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile_icon"
            android:text="Button 4"
            tools:src="@drawable/ic_profile_icon" />
    </LinearLayout>

</RelativeLayout>